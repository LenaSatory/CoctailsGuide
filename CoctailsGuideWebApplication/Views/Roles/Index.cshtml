@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="card text-white bg-primary mb-3" style="width: 20rem; height: 10rem;">
    <div class="card-body">
        <h4 class="card-title">User management</h4>
        <p class="card-text">
            List of roles
        </p>
    </div>
</div>

<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a role="button" class="btn btn-sm btn-dark" asp-action="Create">Add new role</a>
<a role="button" class="btn btn-sm btn-dark" asp-action="UserList">List of users (with access rights)</a>
