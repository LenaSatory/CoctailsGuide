@model CoctailsGuideWebApplication.Coctails

@{
    ViewData["Title"] = "Details";
}
<div class="card text-white bg-primary mb-3" style="width: 20rem; height: 10rem;">
    <div class="card-body">
        <h4 class="card-title">@Html.DisplayFor(model => model.Name)</h4>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>
<div class="Definitions">
        <hr />
        <a asp-action="HeshStrDetails" asp-route-id="@Model.Id">@Html.DisplayFor(model => model.Strength.Name),</a>
        <a asp-action="HeshTehDetails" asp-route-id="@Model.Id">@Html.DisplayFor(model => model.Technique.Name),</a>
        <a asp-action="HeshGlassDetails" asp-route-id="@Model.Id">@Html.DisplayFor(model => model.Glass.Name)</a>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.YearofCreation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.YearofCreation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountryofCreation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountryofCreation.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationHistory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationHistory)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Recipe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Recipe)
            </dd>
        </dl>
</div>
<div class="listOfIngridients">
    <h4>List of ingridients</h4>
    <table class="table table-hover">
        @foreach (var item in Model.Compounds)
        {
            <tr>
                <th scope="row">
                    <a asp-controller="Ingredients" asp-action="Details" asp-route-id="@item.Ingredient.Id">@Html.DisplayFor(model => item.Ingredient.Name)</a>
                </th>
                <td>@Html.DisplayFor(model => item.Amount)</td>
            </tr>
        }
    </table>
    
</div>
<div>
    <a role="button" class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a role="button" class="btn btn-dark" asp-action="Index">Back to List</a>
</div>
