@model IEnumerable<CoctailsGuideWebApplication.Models.User>

@{
    ViewBag.Title = "List of users";
}

<div class="card text-white bg-primary mb-3" style="width: 20rem; height: 10rem;">
    <div class="card-body">
        <h4 class="card-title">User management</h4>
        <p class="card-text">
            List of users
        </p>
    </div>
</div>
<a role="button" class="btn btn-dark" asp-action="Create">Create user</a>

<table class="table">
    <tr><th>Email</th><th>Birth year</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-warning" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

