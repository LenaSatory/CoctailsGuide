@model IEnumerable<CoctailsGuideWebApplication.Ingredients>

@{
    ViewData["Title"] = "IndexHashtag";
}

    <h1>Інгредієнти за категорією @ViewBag.CategoryName</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.CategoryId">Додати новий інгредієнт</a>
</p>
<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>