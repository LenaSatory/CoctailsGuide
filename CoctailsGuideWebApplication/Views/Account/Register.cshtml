@model CoctailsGuideWebApplication.ViewModel.RegisterViewModel
<h2></h2>
<form method="post" asp-controller="Account" asp-action="Register">

    <fieldset>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Email"></label> <br />
            <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Year"></label><br />
            <input class="form-control" asp-for="Year" />
            <span asp-validation-for="Year"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label> <br />
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label><br />
            <input type="password" class="form-control" asp-for="PasswordConfirm" placeholder="PasswordConfirm">
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="form-group">
            <p> </p>
            <input role="button" class="btn btn-dark" type="submit" value="Register" />
        </div>
    </fieldset>
</form>